<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="63dp"
    android:gravity="left|fill_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    android:textAlignment="gravity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:textAlignment="gravity">

        <TextView
            android:id="@+id/receiverContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:background="@drawable/chat_item_receiver"
            android:gravity="center_vertical|left"
            android:minHeight="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="rContent"
            android:textAlignment="gravity"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:textAlignment="gravity">

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiverContent"
            android:layout_marginRight="60dp"
            android:layout_weight="0.02"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="sender"
            android:textAlignment="gravity"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:textAlignment="gravity">

        <TextView
            android:id="@+id/smallTimeReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiverName"
            android:layout_marginRight="60dp"
            android:layout_weight="0.02"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="sender"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>
