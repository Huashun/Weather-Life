<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liangchenzhou.weatherlife.LoginFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0px"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300px"
            android:id="@+id/linearLayout">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/logEmail"
                android:layout_weight="1"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:hint="Email Address"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/logPwd"
                android:layout_weight="1"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:hint="Passwords"
                android:textAlignment="center" />


        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Sign in"
            android:background="@drawable/loginscreen_buttons"
            android:id="@+id/signButton"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignRight="@+id/regButton"
            android:layout_alignEnd="@+id/regButton"
            android:textColor="#FFFFFF" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Register"
            android:id="@+id/regButton"
            android:background="#FFFFFF"
            android:layout_marginRight="37dp"
            android:layout_below="@+id/checkBoxAutoLogin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="47dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Passwords"
            android:id="@+id/checkBoxRememberPwd"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_marginLeft="35dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Sign in"
            android:id="@+id/checkBoxAutoLogin"
            android:layout_below="@+id/checkBoxRememberPwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_marginLeft="35dp" />

    </RelativeLayout>

</FrameLayout>
