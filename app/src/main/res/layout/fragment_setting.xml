<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liangchenzhou.weatherlife.SettingFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0px">

        <Switch
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Cancel Auto Login"
            android:id="@+id/switchCancelAuto"
            android:layout_marginTop="83dp"
            android:checked="false"
            android:layout_centerHorizontal="true" />

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView6"
            android:layout_below="@+id/switchCancelAuto"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Knowledge"
            android:textSize="22dp" />

        <TextView
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This app use: 1. Google FireBase Realtime Database"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6" />

        <TextView
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="                          2. Weather API offered by &quot;OpenWeatherMap&quot;, Map API offered by Google Maps"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true" />

        <TextView
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="                          3. The LineChart use the MPAAndroidchart Library which from the GitHub"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="                          4. The images like icon, background and Start Screen are from the google"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true" />

        <TextView
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Application Author: Liangchen Zhou"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:textColor="#f02d84e1" />

        <TextView
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Version: 1.0"
            android:id="@+id/textView12"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal" />

    </RelativeLayout>

</FrameLayout>
